<?xml version="1.0" encoding="utf-8"?>
<!-- list_item_goal.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Indicator TextView with default rectangle background for completed goals -->
    <TextView
        android:id="@+id/contextText"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="School"
        android:background="@drawable/rectangle_background_completed"
        android:layout_marginEnd="8dp"/>

    <!-- Goal text TextView -->
    <TextView
        android:id="@+id/goalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contextText"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="Goal Text"
        android:textStyle="bold"/>

</RelativeLayout>
