<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ongoing_goals_fragment_container"
        android:name=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/completed_goals_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/background_container"
        android:name="edu.ucsd.cse110.successorator.ui.goals.Ongoing_Goals_Fragment"
        android:layout_width="415dp"
        android:layout_height="737dp"
        android:background="#3995DE"
        android:outlineAmbientShadowColor="#B04545"
        android:outlineSpotShadowColor="#7F2F2F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/DateView_Contatiner"
        android:name="edu.ucsd.cse110.successorator.ui.goals.Ongoing_Goals_Fragment"
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:background="#D1CECE"
        android:clipToOutline="false"
        android:outlineAmbientShadowColor="#151212"
        android:outlineSpotShadowColor="#C35656"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToAdd"
        android:layout_width="73dp"
        android:layout_height="52dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="@+id/DateView_Contatiner"
        app:layout_constraintEnd_toEndOf="@+id/DateView_Contatiner"
        app:layout_constraintTop_toTopOf="@+id/DateView_Contatiner" />

</androidx.constraintlayout.widget.ConstraintLayout>